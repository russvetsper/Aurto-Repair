<link rel="stylesheet" href="../Content/styles.css" >
<h1>Auto-Repair</h1>
<hr WIDTH="100%">
<h2>Mechanic:</h2>
@if (Model.Count != 0)
{
  @foreach (var Mechanic in Model)
  {
    <div class="mechanic">
    <ol>
    <li>
      <h3><a href="/Mechanic/@Mechanic.GetId()">@Mechanic.GetName()</a></h3>
      <a href="/Mechanic/edit/@Mechanic.GetId()">Edit</a>
      <br>
      <a href="Mechanic/delete/@Mechanic.GetId()">Delete</a>
    </li>
  </ol>
</div>

  }
}
<br>
<a href="/Mechanic/new"><button>Add new Mechanic</button></a>
