<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
 <link rel="stylesheet" href="../Content/styles.css" >
@if (@Model.Count == 0)
{
  <p>No clients added</p>
}
else
{
  <form action="/clients/delete" method="post">
  <h4>List of clients:</h4>
  <br>

  <ul>
    @foreach (var client in Model)
    {
      <h4><li>@client.GetName()</li></h4>
    }
  </ul>
<br>
<br>
<br>
<br>
<br>
<br>
<button type="submit">Delete clients</button>
  </form>
}

<p><a href="/clients/new"><button>Add new client</button></a></p>
<p><a href="/"><button>Return home</button></a></p>
