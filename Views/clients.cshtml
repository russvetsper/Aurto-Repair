@if (@Model.Count == 0)
{
  <p>No clients added</p>
}
else
{
  <h1>List of clients:</h1>

  <ul>
    @foreach (var client in Model)
    {
      <li>@client.GetName()</li>
    }
  </ul>

  <form action="/clients/delete" method="post">
    <button type="submit">Delete clients</button>
  </form>
}
<p><a href="/clients/new">Add new client</a></p>
<p><a href="/">Return home</a></p>
